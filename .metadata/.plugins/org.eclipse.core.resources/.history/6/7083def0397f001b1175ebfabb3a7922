package com.webtoon.spring.controller;

import java.util.ArrayList;

import javax.servlet.http.HttpServletRequest;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;

import com.webtoon.spring.domain.HomeVO;
import com.webtoon.spring.service.HomeService;

@Controller
@RequestMapping("/join")
public class joinController {
	

	@Autowired
	private HomeService homeService;

	
	@RequestMapping("searchByDay")
	@ResponseBody
	public ArrayList<HomeVO> homeAjax(Model model,HttpServletRequest request) {
		
		model.addAttribute("day_list",homeService.searchByDay(request.getParameter("day")));
		
		return (ArrayList)homeService.searchByDay(request.getParameter("day"));
		
	}
	
}
