<script>

/*공백 허가X 처리  */
function blankCheck(){
	console.log("come");
	var id=$('#input_id_id').val();
	var pwd=$('#input_id_pwd').val();

	if(id==''||pwd==''){
		console.log(id);
		console.log(pwd);
		alert("공백을 입력하지마세요.");
		return false;
	}
	else{
		return true;
	}			
	
} 
	



