package com.webtoon.spring.controller;

import javax.servlet.http.HttpServletRequest;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;

import com.webtoon.spring.domain.HomeAjaxVO;
import com.webtoon.spring.service.HomeService;

@Controller
@RequestMapping("/")
public class MainController {

	
	
	
	@Autowired
	private HomeService homeService;

	
	
	@RequestMapping("")
	public String viewAll(Model model) {
	  model.addAttribute("viewAll", homeService.viewAll());
	  
	  return "home/home";
	}

	
	@RequestMapping("sunday")
	@ResponseBody
	public String homeAjax(HomeAjaxVO ajaxVO,Model model,HttpServletRequest request) {
		
		System.out.println("day : "+request.getParameter("day"));
		model.addAttribute("day_list",homeService.homeAjax(request.getParameter("day"));
		
		return homeService.homeAjax(ajaxVO.getToon_name()).getToon_name() + homeService.homeAjax(ajaxVO.getToon_name()).getToon_thum();
		
	}
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
